void declaraVariavel() : {}
{
  tipoDado() listaDeclaracoes()
}

void listaDeclaracoes() : {}
{
  declaracao() ( "," declaracao() )*
}

void declaracao() : {}
{
  <IDENTIFICADOR> ( "=" expressao() )?
}

void expressao() : {}
{
  termo() ( <OPREL> termo() )?
}

void termo() : {}
{
  <IDENTIFICADOR> | ( <DIGITO> )+
}

void tipoDado() : {}
{
